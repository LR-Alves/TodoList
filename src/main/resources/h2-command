CREATE TABLE IF NOT EXISTS tasks (
    id BIGINT AUTO_INCREMENT PRIMARY KEY,
    descricao VARCHAR(255) NOT NULL,
    data_criacao DATE NOT NULL,
    status BOOLEAN NOT NULL
);


INSERT INTO tasks (descricao, data_criacao, status)
